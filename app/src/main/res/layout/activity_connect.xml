<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vemergetech.androidlearning.Connect">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/backgroundImage"
            android:src="@mipmap/tower"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/bottomArea"
            android:background="#86C664"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="32"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="32">
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:id="@+id/upArrow"
                    android:src="@mipmap/up"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/upText"
                    android:text="Northbound\n50min"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:id="@+id/downArrow"
                    android:src="@mipmap/up"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/upperLayoutText"
                    android:text="Southbound\n20min"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="32">
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:id="@+id/gpsImage"
                    android:src="@mipmap/gps"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/gpsText"
                    android:text="You are:\n10 min away"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:id="@+id/newImage"
                    android:src="@mipmap/newspaper"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/downText"
                    android:text="WARNING:\Morning Delays"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/bottomArea"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/trainName"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="SuperTrain A136"
                android:textSize="20sp"
                android:padding="7dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/currentlyLabel"
                android:text="currently:"
                android:textSize="20sp"
                android:paddingLeft="7dp"
                android:textColor="#AAAAAA"
                android:background="#FFFFFF"
                android:layout_above="@id/trainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bookButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#D2486F"
                android:text="Book"
                android:textColor="#FFFFFF"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/detailHeader"
                android:background="#6F839A"
                android:text="12:36 Leaving Austin to Los Angeles"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
